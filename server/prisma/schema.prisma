generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Subscription Info
  subscriptionTier      String    @default("free") // "free" or "pro"
  subscriptionExpiresAt DateTime?
  originalTransactionId String?   @unique // To link Apple receipt to User
  
  notes     Note[]
  tags      Tag[]
  dailyUsages DailyUsage[]
  inviteCode InviteCode?
  sentInvites Invite[] @relation("InviteInviter")
  receivedInvite Invite? @relation("InviteInvitee")
  membershipGrants MembershipGrantLedger[]
}

model DailyUsage {
  id        Int      @id @default(autoincrement())
  userId    String
  dateKey   String
  feature   String
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dateKey, feature])
  @@index([userId, dateKey])
}

model Note {
  id                  String   @id
  userId              String
  content             String
  createdAt           DateTime
  updatedAt           DateTime
  deletedAt           DateTime?
  pinnedAt            DateTime?
  version             Int      @default(1)
  serverUpdatedAt     DateTime @default(now())
  serverDeletedAt     DateTime?
  lastModifiedByDeviceId String?
  tags                Tag[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Tag {
  id                  String   @id
  userId              String
  name                String
  colorHex            String
  createdAt           DateTime
  updatedAt           DateTime
  lastUsedAt          DateTime?
  sortOrder           Int
  parentId            String?
  deletedAt           DateTime?
  version             Int      @default(1)
  serverUpdatedAt     DateTime @default(now())
  serverDeletedAt     DateTime?
  lastModifiedByDeviceId String?

  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   Tag?   @relation("TagHierarchy", fields: [parentId], references: [id])
  children Tag[]  @relation("TagHierarchy")
  notes    Note[]
}

model SyncLog {
  id              Int      @id @default(autoincrement())
  userId          String
  entityType      String
  entityId        String
  version         Int
  serverUpdatedAt DateTime
  operation       String

  @@index([userId, id])
  @@index([userId, entityType, entityId])
}

model Waitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  source    String?  // e.g., "twitter", "website"
}

model InviteCode {
  id        String   @id @default(cuid())
  userId    String   @unique
  code      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  invites Invite[]
}

model Invite {
  id           String   @id @default(cuid())
  inviterId    String
  inviteeId    String   @unique
  inviteCodeId String
  inviteCode   String
  status       String
  rewardDays   Int      @default(7)
  boundAt      DateTime @default(now())
  rewardedAt   DateTime?
  rejectReason String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  inviter       User                  @relation("InviteInviter", fields: [inviterId], references: [id], onDelete: Cascade)
  invitee       User                  @relation("InviteInvitee", fields: [inviteeId], references: [id], onDelete: Cascade)
  inviteCodeRef InviteCode            @relation(fields: [inviteCodeId], references: [id], onDelete: Cascade)
  grants        MembershipGrantLedger[]

  @@index([inviterId, rewardedAt])
  @@index([inviteCode])
}

model MembershipGrantLedger {
  id              Int      @id @default(autoincrement())
  userId          String
  inviteId        String
  role            String
  days            Int
  beforeTier      String
  beforeExpiresAt DateTime?
  afterTier       String
  afterExpiresAt  DateTime?
  createdAt       DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  invite Invite @relation(fields: [inviteId], references: [id], onDelete: Cascade)

  @@unique([inviteId, role])
  @@index([userId, createdAt])
}
